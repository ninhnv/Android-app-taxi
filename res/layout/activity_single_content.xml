<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.9" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.9" >

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@android:color/white" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@android:color/white" >

                        <LinearLayout
                            android:id="@+id/linerly"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/ic_actionbar_bg"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="56dp" >

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="60dp"
                                android:gravity="center"
                                android:text="Taxi Viá»‡t"
                                android:textColor="@android:color/black"
                                android:textSize="22sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/btnback"
                            android:layout_width="56dp"
                            android:layout_height="48dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="15dp"
                            android:contentDescription="@null"
                            android:scaleType="centerInside"
                            android:src="@drawable/btn_cancel" />

                        <TextView
                            android:id="@+id/tx_name"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linerly"
                            android:layout_marginLeft="68dip"
                            android:textColor="#444444"
                            android:textSize="20dip"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tx_number"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tx_name"
                            android:layout_marginLeft="60dip"
                            android:paddingLeft="10dip"
                            android:textColor="#000000"
                            android:textSize="20dip" />

                        <TextView
                            android:id="@+id/tx_seat"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tx_number"
                            android:layout_marginLeft="60dip"
                            android:paddingBottom="10dip"
                            android:paddingLeft="10dip"
                            android:textColor="#000000"
                            android:textSize="20dip" />

                        <TextView
                            android:id="@+id/tx_gia"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tx_seat"
                            android:paddingBottom="10dip"
                            android:paddingLeft="10dip"
                            android:textColor="#000000"
                            android:textSize="20dip" />

                        <TextView
                            android:id="@+id/tx_gia_end"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tx_gia"
                            android:paddingBottom="10dip"
                            android:paddingLeft="10dip"
                            android:textColor="#000000"
                            android:textSize="20dip"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tx_details"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tx_gia_end"
                            android:paddingBottom="10dip"
                            android:paddingLeft="10dip"
                            android:textColor="#000000"
                            android:textSize="20dip" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tx_details"
                            android:gravity="center" >
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="60dip"
                            android:layout_height="60dip"
                            android:layout_alignRight="@+id/btnback"
                            android:layout_alignTop="@+id/tx_name"
                            android:layout_marginTop="12dip"
                            android:paddingLeft="10dip"
                            android:src="@drawable/icon_taxi" />

                        <ImageView
                            android:id="@+id/btncall"
                            android:layout_width="56dp"
                            android:layout_height="48dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:contentDescription="@null"
                            android:scaleType="centerInside"
                            android:src="@drawable/btn_call" />
                    </RelativeLayout>
                </ScrollView>
            </FrameLayout>

            <include layout="@layout/footer_layout_2" />
        </LinearLayout>
    </FrameLayout>

    <include layout="@layout/adview" />

</LinearLayout>